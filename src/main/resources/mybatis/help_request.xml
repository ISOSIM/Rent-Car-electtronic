<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rentcar.support.mapper.RequestMapper">


<!--    출동시 요청자 정보, 위치 정보 저장한다. -->
    <insert id="create" parameterType="com.rentcar.support.model.Supporter">
        insert into help_request(rx,ry,reason,carnum)
        values(#{rx}, #{ry}, #{reason}, #{carnum});
    </insert>

<!--    출동시 요청자의 위치 정보를 저장한다.-->
    <update id="update" parameterType="com.rentcar.support.model.Supporter">
        UPDATE help_request
        SET rx = #{rx}, ry = #{ry}
        WHERE carnum = #{carnum};
    </update>

    <update id="update_state" parameterType="Map">
        UPDATE help_request
        SET state = #{state}
        WHERE carnum = #{carnum};
    </update>

<!--    예약 테이블 받아오면 수정할 것 -->
    <select id="readmock" parameterType="String" resultType="boolean">
        select IF(COUNT(*) = 1, true, false)
        from booking where reserved_car = #{carnum};
    </select>

</mapper>